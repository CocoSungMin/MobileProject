<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_background"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/font"
        android:text="일정 추가"
        android:textColor="#CCC6C6"
        android:textSize="50sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView

                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/font"
                android:paddingLeft="70dp"
                android:text="시작 날짜 : "
                android:textColor="#CCC6C6"
                android:textSize="25sp" />


            <Button
                android:id="@+id/DayButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@drawable/login_id_input"
                android:fontFamily="@font/font"
                android:onClick="mOnPopupClick"
                android:text="YYYY/MM/DD"
                android:textColor="#CCC6C6"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:paddingLeft="70dp">

            <Spinner
                android:id="@+id/Hour"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:text="Year" />

            <Spinner
                android:id="@+id/Minute"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:hint="Month" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:fontFamily="@font/font"
                android:paddingLeft="70dp"
                android:text="종료 날짜 : "
                android:textColor="#CCC6C6"
                android:textSize="25sp" />

            <Button
                android:id="@+id/endDayButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/login_id_input"
                android:fontFamily="@font/font"
                android:onClick="mOnPopupClick2"
                android:text="YYYY/MM/DD"
                android:textColor="#CCC6C6"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="70dp">


            <Spinner
                android:id="@+id/endHour"
                android:layout_width="100dp"
                android:layout_height="50dp" />

            <Spinner
                android:id="@+id/endMinute"
                android:layout_width="100dp"
                android:layout_height="50dp" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="70dp">

        <CheckBox
            android:id="@+id/group_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/font"
            android:text="그룹"
            android:textColor="#CCC6C6"
            android:textSize="18sp" />

        <Spinner
            android:id="@+id/group_spinner"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:visibility="invisible"
            android:paddingLeft="20dp"/>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/font"
        android:paddingLeft="70dp"
        android:text="제목"
        android:textColor="#CCC6C6"
        android:textSize="25sp" />

    <EditText
        android:id="@+id/schduleTitle"
        android:layout_width="300dp"
        android:layout_height="30dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:background="@drawable/login_id_input"
        android:drawableTint="#E6FFFFFF"
        android:fontFamily="@font/font"
        android:hint="제목을 입력하세요."
        android:paddingLeft="20dp"
        android:textColor="@color/colorWhite"
        android:textSize="20dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/font"
        android:paddingLeft="70dp"
        android:text="내용"
        android:textColor="#CCC6C6"
        android:textSize="25sp" />

    <EditText
        android:id="@+id/schduleContent"
        android:layout_width="300dp"
        android:layout_height="30dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:background="@drawable/login_id_input"
        android:drawableTint="#E6FFFFFF"
        android:fontFamily="@font/font"
        android:hint="내용을 입력하세요."
        android:paddingLeft="20dp"
        android:textColor="@color/colorWhite"
        android:textSize="20sp" />

    <Button
        android:id="@+id/addSchedule"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:background="@drawable/login_button"
        android:fontFamily="@font/font"
        android:onClick="registerSchedule"
        android:text="등록"
        android:textColor="#CCC6C6"
        android:textSize="30sp" />

    <!-- DatePickerDialog로 UI변경해볼까 해서 임시로 추가한 코드(120~125) -->
    <EditText

        android:id="@+id/date_time_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:hint="Select Date and Time"
        android:inputType="none" />
</LinearLayout>