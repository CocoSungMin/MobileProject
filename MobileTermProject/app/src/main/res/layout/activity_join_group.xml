<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_background"
    tools:context=".JoinGroup"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="277dp"
        android:layout_height="75dp"
        android:layout_marginTop="40dp"
        android:src="@drawable/app_name"
        android:layout_gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/font"
        android:text="Add Group"
        android:textColor="#ffffff"
        android:textSize="25sp" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="60dp"
        android:fontFamily="@font/font"
        android:layout_marginTop="60dp"
        android:text="Join Group"
        android:textColor="#ffffff"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/join_group"
        android:layout_width="300dp"
        android:layout_height="45dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:background="@drawable/login_id_input"
        android:drawableLeft="@drawable/ic_group_add"
        android:drawablePadding="8dp"
        android:drawableTint="#E6FFFFFF"
        android:fontFamily="@font/font"
        android:hint="Group ID"
        android:paddingLeft="12dp"
        android:textColorHint="#E6FFFFFF"
        android:textColor="@color/colorWhite" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <Button
        android:id="@+id/addBtn"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="60dp"
        android:background="@drawable/login_button"
        android:fontFamily="@font/font"
        android:text="Create"
        android:textColor="#ffffff"
        android:textSize="18sp"/>

    <Button
        android:id="@+id/joinBtn"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="15dp"
        android:background="@drawable/login_button"
        android:fontFamily="@font/font"
        android:text="Join"
        android:textColor="#ffffff"
        android:textSize="18sp"/>
    </LinearLayout>

</LinearLayout>